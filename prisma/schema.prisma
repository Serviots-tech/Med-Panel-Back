generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum DrugCategory {
  H
  H1
  G
  NRX
  TB
  NON_SCHEDULE
}

// enum DosageForm {
//   Tablet
//   Capsule
//   Liquid
//   Ointment
//   Injection
// }

enum PrescriptionReq {
  YES
  NO
}

enum ApprovalInfo {
  FDA
  EMA
}

enum Role {
  ADMIN
  USER
}

model User {
  id        String   @id @unique @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Role
  isDeleted Boolean  @default(false)
  token     String?
  // Medicine Medicine[]
  // DoseForms DoseForms[]
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

model DoseForms {
  id        String     @id @unique @default(uuid())
  name      String
  createdBy String?
  isDeleted Boolean    @default(false)
  // creator     User     @relation(fields: [createdBy], references: [id])
  Medicine  Medicine[]
  updatedAt DateTime   @updatedAt
  createdAt DateTime   @default(now())
}

model Medicine {
  id                    String          @id @unique @default(uuid())
  medicineName          String
  brandName             String
  productType           String
  drugCategory          DrugCategory
  // dosageForm            DosageForm
  doseFormId            String
  doseForm              DoseForms       @relation(fields: [doseFormId], references: [id])
  strength              String
  manufacturer          String
  packSize              String
  price                 Float
  routeOfAdministration String
  TherapeuticClass      String
  indications           String
  sideEffects           String
  contraindications     String
  storageConditions     String
  shelfLife             String
  prescriptionReq       PrescriptionReq
  approvalInfo          ApprovalInfo
  barcodeSKU            String          @unique
  batchNumber           String
  interactions          String
  countryOfOrigin       String
  ndc                   String
  image                 String[]
  distributor           String
  specialConsiderations String
  expiryDate            DateTime?
  scheduleType          String?
  gstPercentage         Int
  isDeleted             Boolean         @default(false)
  createdAt             DateTime        @default(now())
  updatedAt             DateTime        @updatedAt
  createdBy             String?
  // creator     User     @relation(fields: [createdBy], references: [id])
}
