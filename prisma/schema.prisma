generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PackSize {
  BOTTLE
  STRIP
  JAR
  TUBE
  PACKET
  BOX
  SACHET
  VIAL
  KIT
  BAG
}

enum ScheduleType {
  H
  H1
  G
  NRX
  TB
  NON_SCHEDULE
}

enum UnitType {
  GM
  ML
  KIT
  KG
  PIECE
  TABLET
  CAPSULE
  LTR
  MDI
}

enum PrescriptionReq {
  YES
  NO
}
enum SubCategory {
  MOTHER_CARE
  PROTEIN_POWDERS_DRINKS
  VITAMINS_SUPPLEMENTS
  SEXUAL_HEALTH_SUPPLEMENTS
  FEMININE_HYGIENE
  GROOMING
  HAIR_CARE
  ORAL_CARE
  FRAGRANCES
  PET_PRODUCT
  CLEANING_ESSENTIALS
  FOOD_DRINK
  DIAPERS_WIPES
  BABY_PRODUCT
  SKIN_CARE
}

enum Role {
  ADMIN
  USER
}

model User {
  id        String     @id @unique @default(uuid())
  name      String
  email     String     @unique
  password  String
  role      Role
  isDeleted Boolean    @default(false)
  token     String?
  updatedAt DateTime   @updatedAt
  createdAt DateTime   @default(now())
  Medicine  Medicine[]
}

model DoseForms {
  id        String     @id @unique @default(uuid())
  name      String
  createdBy String?
  isDeleted Boolean    @default(false)
  Medicine  Medicine[]
  updatedAt DateTime   @updatedAt
  createdAt DateTime   @default(now())
}

model Medicine {
  id                    String          @id @unique @default(uuid())
  medicineName          String
  brandName             String
  productType           String
  doseFormId            String
  doseForm              DoseForms       @relation(fields: [doseFormId], references: [id]) 
  weightage             String
  manufacturer          String
  packSize              PackSize
  unitType              UnitType
  marketedBy            String
  hsnCode               String?
  saltStrength        String?
  flavors               String
  offers                String?
  subCategory           SubCategory?
  price                 Float
  routeOfAdministration String?
  sideEffects           String?
  prescriptionReq       PrescriptionReq
  barcodeSKU            String?
  ndc                   String?
  image                 String[]
  expiryDate            DateTime?
  scheduleType          ScheduleType
  gstPercentage         Int
  saltComposition       String
  isDeleted             Boolean         @default(false)
  createdAt             DateTime        @default(now())
  updatedAt             DateTime        @updatedAt
  createdBy             String
  creator               User            @relation(fields: [createdBy], references: [id])
}
